<Application x:Class="WPFProject.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPFProject"
             StartupUri="GSStylesWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>

            <Style x:Key="SubmitButtonStyle" TargetType="Control">
                <Setter Property="Height">
                    <Setter.Value>28px</Setter.Value>
                </Setter>
                <Setter Property="Width">
                    <Setter.Value>90px</Setter.Value>
                </Setter>
                <Setter Property="BorderThickness">
                    <Setter.Value>1</Setter.Value>
                </Setter>
                <Setter Property="BorderBrush">
                    <Setter.Value>#000000</Setter.Value>
                </Setter>
                <Setter Property="Background">
                    <Setter.Value>#0073c6</Setter.Value>
                </Setter>
                <Setter Property="FontWeight">
                    <Setter.Value>Bold</Setter.Value>
                </Setter>
                <Setter Property="FontFamily" >
                    <Setter.Value>Segoe UI</Setter.Value>
                </Setter>
                <Setter Property="FontSize">
                    <Setter.Value>12px</Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources> 

</Application>
