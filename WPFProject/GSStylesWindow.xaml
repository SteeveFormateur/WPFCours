<Window x:Class="WPFProject.GSStylesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFProject"
        mc:Ignorable="d"
        Title="Créer des Styles pour les Conrtoles" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="StandardText"  TargetType="TextBlock">
            <Setter Property="FontSize" Value="30"></Setter>
        </Style>
        <Style BasedOn="{StaticResource StandardText}" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Blue"></Setter>
            <Setter Property="FontStyle" Value="Italic"></Setter>
            <Setter Property="FontWeight" Value="ExtraBold"></Setter>
        </Style>
        <Style x:Key="BoldItalic" BasedOn="{StaticResource StandardText}" TargetType="TextBlock">
            <Setter Property="FontStyle" Value="Italic"></Setter>
            <Setter Property="FontWeight" Value="ExtraBold"></Setter>
        </Style>
    </Window.Resources>

    <Grid x:Name="GridSplitterPanel">
        <Grid.ColumnDefinitions>
            <!-- auto : la colonne prend la taille du controle -->
            <!-- *    : la largeur de la colonne s'adapte à la taille de la fenetre -->
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <!-- auto : la colonne prend la taille du controle -->
            <!-- *    : la largeur de la colonne s'adapte à la taille de la fenetre -->
            <!-- 2*    : la hauteur de la ligne s'adapte à la taille de la fenetre -->
            <!-- 1*    : la hauteur de la ligne s'adapte à la taille de la fenetre -->
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"  FontStretch="Medium" Style="{StaticResource StandardText}"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Grid.ColumnSpan="3">Bonjour à tous</TextBlock>
        <TextBlock Grid.Row="0" FontStretch="Medium" 
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Grid.ColumnSpan="3">Bonjour à tous</TextBlock>
        <TextBlock Grid.Row="0"  FontStretch="Medium" Style="{StaticResource BoldItalic}"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Grid.ColumnSpan="3">Bonjour à tous</TextBlock>
        <Button Content="Annuler" Width="100" Height="40" Grid.Row="1" Grid.Column="0" 
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                ></Button>
        <Button Content="Ok" Width="100" Height="40" Grid.Row="1" Grid.Column="3"                  
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                ></Button>
        <!--<GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" ></GridSplitter>-->
        <GridSplitter Grid.Column="1" Grid.Row="1" Width="5" 
                      HorizontalAlignment="Stretch" 
                      ResizeDirection="Columns"></GridSplitter>
    </Grid>
</Window>
