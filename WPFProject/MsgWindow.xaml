<Window x:Class="WPFProject.MsgWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFProject"
        mc:Ignorable="d"
        Title="GridWindow" Height="450" Width="800">


    <Grid x:Name="MsgPanel">
        <Grid.ColumnDefinitions>
            <!-- auto : la colonne prend la taille du controle -->
            <!-- *    : la largeur de la colonne s'adapte à la taille de la fenetre -->
            <ColumnDefinition Width="57*"></ColumnDefinition>
            <ColumnDefinition Width="143*"/>
            <ColumnDefinition Width="200*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <!-- auto : la colonne prend la taille du controle -->
            <!-- *    : la largeur de la colonne s'adapte à la taille de la fenetre -->
            <!-- 2*    : la hauteur de la ligne s'adapte à la taille de la fenetre -->
            <!-- 1*    : la hauteur de la ligne s'adapte à la taille de la fenetre -->
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock FontSize="30" FontWeight="Bold" FontStretch="Medium" 
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Grid.ColumnSpan="2" Grid.Column="1" Margin="183,0,0,0">Bonjour à tous</TextBlock>
        <Button Content="Annuler" Width="100" Height="40" Grid.Row="1" Grid.Column="1" Background="SlateGray" 
                VerticalAlignment="Center"
                HorizontalAlignment="Left" Margin="36,0,0,0"
                ></Button>
        <Button Content="Ok" Width="100" Height="40" Grid.Row="1" Grid.Column="2" 
                Background="SlateGray" 
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                ></Button>

    </Grid>
</Window>
