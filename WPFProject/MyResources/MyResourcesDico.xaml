<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="RequiredInputStyle" TargetType="Control">
        <Setter Property="FontWeight">
            <Setter.Value>Normal</Setter.Value>
        </Setter>
        <Setter Property="FontFamily" >
            <Setter.Value>Arial</Setter.Value>
        </Setter>
        <Setter Property="FontSize">
            <Setter.Value>14px</Setter.Value>
        </Setter>
        <Setter Property="BorderThickness">
            <Setter.Value>1</Setter.Value>
        </Setter>
        <Setter Property="BorderBrush">
            <Setter.Value>#FF0000</Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>